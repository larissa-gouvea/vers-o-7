<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TipoComidaActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24" />

    <Button
        android:id="@+id/lista_btn_cronograma"
        android:layout_width="150dp"
        android:layout_height="59dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="15dp"
        android:text="Cronograma semanal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lista_btn_compras"
        android:layout_width="150dp"
        android:layout_height="59dp"
        android:layout_marginTop="80dp"
        android:text="lista de compras"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tipo_btn_doces"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:text="Doces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
         />

    <Button
        android:id="@+id/tipo_btn_salgados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="Salgados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipo_btn_doces"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/tipo_btn_vegano"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="Vegano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipo_btn_salgados"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/tipo_btn_sem_acucar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="Sem AÃ§ucar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipo_btn_vegano"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/tipo_btn_sem_lactose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="Sem Lactose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipo_btn_sem_acucar"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/tipo_btn_pontos"

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"

        android:drawableTop="@drawable/ic_baseline_more_vert_24"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>